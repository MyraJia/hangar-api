
import rwp_logo from '../assets/svg/rwp-logo.svg'
import hangar_api_logo from '../assets/svg/hangar-api-logo.svg'

export interface Input {
	renderBody: Component,
	title?: string,
}

style.scss {
	@use '../scss/main';

	.g-header {
		background: var(--color-bg-secondary);
	}

	.g-nav {
		a {
			display: block;

			text-decoration: none;
			color: var(--color-text);

			font-size: 1.125rem;
			font-weight: 600;
			padding: 0.5rem 0rem;
		}

		&__group {
			list-style: none;
			margin: unset;
			padding: unset;

			display: flex;
			flex-direction: row;
			gap: 1rem;
		}

		&__title {
			text-transform: uppercase;
			font-weight: 900 !important;
		}
	}

	.g-content {
		min-height: calc(100vh - 5.875rem);
	}

	.g-footer {
		background: var(--color-bg-secondary);
		padding: var(--column-padding) 0;

		&__logos {
			flex-grow: 1;

			> svg {
				display: block;

				max-width: 10rem;
				height: auto;
			}
		}

		&__copypasta {
			opacity: 0.75;
			font-size: 0.875rem;
			font-style: italic;
		}
	}
}

